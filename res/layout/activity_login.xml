    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rel_title"
        android:layout_marginTop="50dp"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/login_input_phone_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView1"
                android:background="@null"
                android:ems="8"
                android:hint="请输入手机号"
                android:inputType="phone" />

            <Button
                android:id="@+id/login_request_code_btn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/login_input_phone_et"
                android:layout_alignBottom="@+id/login_input_phone_et"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_btn"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#744000"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:background="#efefef"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view1" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/code" />

            <EditText
                android:id="@+id/login_input_code_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView2"
                android:background="@null"
                android:ems="8"
                android:hint="请输入验证码"
                android:inputType="phone" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/login_commit_btn"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rel_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_btn"
        android:gravity="center"
        android:textColor="#744000"
        android:text="登录" />

</RelativeLayout>
