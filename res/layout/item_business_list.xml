<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
       />

    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/iv_image"
        android:text="来福洗衣店"
        android:textColor="#3F3F3F"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_limit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_image"
        android:layout_alignLeft="@+id/ratingBar1"
        android:text="起送价"
        android:textColor="#7B7B7B"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_money"
        android:layout_alignLeft="@+id/tv_shopname"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_limit_price"
        android:layout_alignBottom="@+id/tv_limit_price"
        android:layout_toRightOf="@+id/tv_limit_price"
        android:text=""
        android:textColor="#F75E5E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_image"
        android:text="一"
        android:textSize="10sp" 
        android:textColor="#FFF"
        android:background="@drawable/shop_list_bag_style"
        android:layout_marginTop="8dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        />

    <TextView
        android:id="@+id/tv_urgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_bag"
        android:background="@drawable/shop_list_urgent_style"
        android:text="急"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
       
        
         />

    <TextView
        android:id="@+id/tv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_limit_price"
        android:layout_alignBottom="@+id/tv_limit_price"
        android:layout_toRightOf="@+id/tv_limit_price"
        android:text="￥"
        android:textColor="#F75E5E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bagwash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_urgent"
        android:layout_alignLeft="@+id/tv_urgent_text"
        android:text="本店支持一袋洗服务"
        android:textColor="#B3B3B3"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_urgent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_urgent"
        android:layout_alignBottom="@+id/tv_urgent"
        android:layout_toRightOf="@+id/tv_urgent"
        android:text="本店支持加急洗服务"
        android:textColor="#B3B3B3"
        android:textSize="10sp"
        android:layout_marginLeft="5dp" />
 		<View
 		    android:layout_marginTop="10dp"
 		    android:layout_below="@+id/tv_urgent_text"
	        android:layout_gravity="center_vertical"
	        style="@style/item_line"
        />		
</RelativeLayout>
